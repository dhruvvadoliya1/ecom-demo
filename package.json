{
    "name": "monolith-app",
    "version": "1.0.0",
    "private": true,
    "scripts": {
      "start": "node api/server.js", 
      "client": "npm start --prefix client", 
      "api": "nodemon api/server.js",
      "dev": "concurrently \"npm run api\" \"npm run client\"", 
      "build": "npm run build --prefix client",
      "postinstall": "npm run build"
    },
    "dependencies": {
      "concurrently": "^8.2.0"
    },
    "devDependencies": {
      "nodemon": "^3.0.1"
    }
  }
  